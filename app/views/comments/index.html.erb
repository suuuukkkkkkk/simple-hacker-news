<section class="sitewide-comments">
  <% @comments.each do |comment| %>
  <div class="comment">
    <p class="comment-owner">
        <%= comment.user.username %>
      
      <span class="comment-created small">
        <%= time_ago_in_words(comment.created_at) %> ago
      </span>

      
    </p>

    <p>
      <%= comment.body %>
    </p>
  </div>
  <% end %>
</section>
